<div class="product-details">

  {{!-- Header --}}
  <section>
    <h3>{{@title}}</h3>
    <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half-o"></i>
    </div>
  </section>

  {{!-- Author --}}
  <section>
   <h6>{{@author.fullName}}</h6>
  </section>

  {{!-- Price --}}
  <section>
    <del class="small text-black-50">${{@price.original}}</del>
    <i class="text-danger font-weight-bold">${{@price.current}}</i>
  </section>

  <button class="btn btn-info" type="button" {{on "click" this.addToCart}}>
      <i class="fa fa-shopping-cart mr-1"></i>
      Add to cart
  </button>
</div>